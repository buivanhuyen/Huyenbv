<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="hr_timesheet_overtime_config" model="hr.timesheet.overtime.config">
            <field name="name" eval="'Timesheet Overtime Config '+time.strftime('%Y')"/>
            <field name="active" eval="True"/>
            <field name="date_from" eval="time.strftime('%Y-%m-%d')"/>
            <field name="number_of_hours" eval="1"/>
            <field name="percent_night" eval="1"/>
            <field name="percent_weekend" eval="1.5"/>
            <field name="percent_holiday" eval="3"/>
            <field name="state" eval="'active'"/>
        </record>

    </data>
</odoo>
