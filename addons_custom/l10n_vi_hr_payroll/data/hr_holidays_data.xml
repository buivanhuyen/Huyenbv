<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Casual leave -->
        <record id="hr_holidays.holiday_status_cl" model="hr.holidays.status">
            <field name="name" eval="'Annual Leaves '+time.strftime('%Y')"/>
            <field name="limit" eval="False"/>
            <field name="color_name">black</field>
        </record>

        <!-- Sick leave -->
        <record id="hr_holidays.holiday_status_sl" model="hr.holidays.status">
            <field name="name">Sick Leaves</field>
            <field name="limit" eval="True"/>
            <field name="color_name">red</field>
        </record>

        <!-- Compensatory Days -->
        <record id="hr_holidays.holiday_status_comp" model="hr.holidays.status">
            <field name="name">Compensatory Days</field>
            <field name="limit" eval="False"/>
            <field name="color_name">lavender</field>
        </record>

        <!--Unpaid Leave -->
        <record id="hr_holidays.holiday_status_unpaid" model="hr.holidays.status">
            <field name="name">Unpaid Leaves</field>
            <field name="limit" eval="True"/>
            <field name="color_name">brown</field>
        </record>

        <!-- Marry Leave -->
        <record id="Holiday_status_marriage" model="hr.holidays.status">
            <field name="name">Marriage Leaves</field>
            <field name="limit" eval="False"/>
            <field name="color_name">lavender</field>
        </record>

        <!--Funeral Leave-->
        <record id="holiday_status_funeral" model="hr.holidays.status">
            <field name="name">Funeral Leaves</field>
            <field name="limit" eval="False"/>
            <field name="color_name">black</field>
        </record>
        <!-- Working Days -->
        


    </data>
</odoo>
